# PingToPass Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# Core Application Settings
# ================================
NODE_ENV=development
SITE_URL=http://localhost:3000

# ================================
# Database Configuration (Turso)
# ================================

# Development Database
TURSO_DATABASE_URL_DEV=libsql://pingtopass-dev-[your-org].turso.io
TURSO_AUTH_TOKEN_DEV=your-dev-auth-token

# Production Database  
TURSO_DATABASE_URL_PROD=libsql://pingtopass-prod-[your-org].turso.io
TURSO_AUTH_TOKEN_PROD=your-prod-auth-token

# Current Environment Database (will be set by scripts)
TURSO_DATABASE_URL=${TURSO_DATABASE_URL_DEV}
TURSO_AUTH_TOKEN=${TURSO_AUTH_TOKEN_DEV}

# ================================
# Authentication
# ================================

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long

# Google OAuth
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# ================================
# Payment Processing (Stripe)
# ================================

# Stripe Keys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLIC_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ================================
# AI Integration
# ================================

# OpenRouter for LLM access
OPENROUTER_API_KEY=your-openrouter-api-key

# LangSmith for observability (optional)
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=pingtopass-dev

# ================================
# Twitter Growth System (Optional)
# ================================

# Twitter API v2
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# ================================
# Development Tools
# ================================

# Enable debug logging
DEBUG=pingtopass:*

# Performance monitoring
PERFORMANCE_MONITORING=true
LOG_LEVEL=debug

# ================================
# Testing Configuration
# ================================

# Test Database (in-memory SQLite)
TEST_DATABASE_URL=:memory:
TEST_JWT_SECRET=generate-random-secret-for-testing

# ================================
# Cloudflare Configuration
# ================================

# Cloudflare Account ID (for wrangler)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# Wrangler Configuration
WRANGLER_SEND_METRICS=false

# ================================
# Quick Setup Commands
# ================================

# 1. Create Turso databases:
#    turso db create pingtopass-dev
#    turso db create pingtopass-prod
#    turso auth token

# 2. Set up Google OAuth:
#    https://console.developers.google.com/
#    Create OAuth 2.0 credentials

# 3. Set up Stripe:
#    https://dashboard.stripe.com/apikeys
#    Get your API keys

# 4. Install dependencies:
#    npm install

# 5. Run migrations:
#    npm run db:migrate:dev

# 6. Start development:
#    npm run dev