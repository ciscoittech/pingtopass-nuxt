# ========================================
# PingToPass Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ========================================
# Database Configuration (Turso)
# ========================================
# Get these from https://turso.tech/dashboard
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your-turso-auth-token

# ========================================
# Authentication (Google OAuth)
# ========================================
# Get these from https://console.cloud.google.com/apis/credentials
NUXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT secret for session tokens (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# ========================================
# AI Integration (LangChain + OpenRouter)
# ========================================
# Get from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key

# Optional: Get from https://smith.langchain.com/ for tracing
LANGCHAIN_API_KEY=ls__your-langchain-api-key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=pingtopass

# ========================================
# Payment Processing (Stripe)
# ========================================
# Get from https://dashboard.stripe.com/apikeys
NUXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ========================================
# Application Settings
# ========================================
# Your application URL
NUXT_PUBLIC_SITE_URL=http://localhost:3000

# Environment (development, preview, production)
NODE_ENV=development

# ========================================
# Cloudflare Settings (for deployment)
# ========================================
# These are typically set in wrangler.toml or via wrangler CLI
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_API_TOKEN=your-api-token